@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (ViewBag.displayMenu == "Yes")
{
    <h1>Welcome Admin.</h1>
    <h3>
        <li>@Html.ActionLink("Manage Role", "Index", "Role")</li>
    </h3>
    <li>
        @Html.ActionLink("Register", "Member", "Member")
    </li>
    <li>
        @Html.ActionLink("Schemes", "Index", "Schemes")
    </li>
}
else
{
    <h2>  Welcome <strong>@ViewBag.Name</strong> :) .We will add Schemes module soon </h2>
    <li>
        <h2> @Html.ActionLink("Register", "Create", "Member/Member")</h2>




    </li>

}

@if (ViewBag.resultquery != null)
{
    <div class="container-fluid">
            <div class="panel-body">
                <div class="page">

                </div>
            </div>
            <div class="row">
                <div class="col-md-4">

                </div>
                <div class="col-md-4">
                    <table class="table" id="myTable">
                        <tr>
                            <th>
                                @Html.DisplayName("MemberName")
                            </th>

                            <th>
                                @Html.DisplayName("Mobile")
                            </th>
                            <th>
                                @Html.DisplayName("Email")
                            </th>


                        </tr>



                        <td>
                            @ViewBag.resultquery.MemberName

                        </td>

                        <td>
                            @ViewBag.resultquery.Mobile

                        </td>

                        <td>
                            @ViewBag.resultquery.Email
                        </td>

                    </table>
                </div>
            </div>

        </div>

}


